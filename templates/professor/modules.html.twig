{% extends 'base.html.twig' %}

{% block title %} Modules {% endblock %}

{% block content %}
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            {% for course in courses %}
                {% for module in course.modules %}
                    <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
                        <div class="card">
                            <div class="card-header d-flex align-items-center justify-content-between">
                                <h6 class="card-title m-0 me-2 text-capitalize" title="{{ course.name }}">{{ course.shortName }}</h6>
                                <div>
                                    <small class="badge bg-label-info">{{ course.hours }} hours</small>
                                </div>
                            </div>
                            <div class="card-body text-center">
                                <div class="avatar avatar-md mx-auto mb-4">
                                    <img src="{{ vich_uploader_asset(module) }}" class="rounded" alt="module image">
                                </div>
                                <h6 class="card-title mb-1 me-2 text-nowrap">{{ module.name }}</h6>
                                <small class="d-block mb-2">{{ course.totalSession }} Sessions</small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endblock %}