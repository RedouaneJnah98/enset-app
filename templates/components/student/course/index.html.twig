{% extends 'base.html.twig' %}
{% block title %} Courses {% endblock %}

{% block content %}

    <div class="container-xxl flex-grow-1 container-p-y">

        <div class="row">
            {% for course in courses %}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex align-items-center justify-content-between">
                            <h5 class="card-title m-0 me-2 text-capitalize">{{ course.name }}</h5>
                            <div>
                                <span class="badge bg-label-primary">{{ course.hours }} Hours</span>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-borderless table-striped">
                                <thead>
                                <tr>
                                    <th>Modules</th>
                                    <th>Field</th>
                                    <th>Department</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if course.modules is empty %}
                                    <tr>
                                        <td colspan="3" class="text-center">No rows found.</td>
                                    </tr>
                                {% endif %}

                                {% for module in course.modules %}
                                    <tr>
                                        <td>
                                            <div class="d-flex justify-content-start align-items-center">
                                                <div class="avatar me-2">
                                                    <img src="{{ vich_uploader_asset(module) }}" alt="Avatar" class="rounded">
                                                </div>
                                                <div class="d-flex flex-column">
                                                    <h6 class="mb-0 text-truncate">{{ module.name }}</h6><small class="text-truncate text-muted">{{ course.totalSession }} Sessions</small>
                                                </div>

                                            </div>
                                        </td>
                                        <td>
                                            <small class="fw-semibold badge bg-label-success" title="{{ app.user.field.name }}">{{ app.user.field.shortName }}</small>
                                        </td>
                                        <td>
                                            <small class="fw-semibold">{{ course.department }}</small>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}