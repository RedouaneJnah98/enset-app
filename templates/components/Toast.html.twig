{% block javascripts %}
    <script src="{{ asset('assets/vendor/libs/jquery/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/libs/toaster/jquery.toast.min.js') }}"></script>
{% endblock %}

<script>
    $.toast({
        heading: '{{ heading }}',
        text: '{{ message }}',
        showHideTransition: 'fade',
        icon: '{{ type }}',
        position: 'top-right',
        hideAfter: 6000
    })
</script>


